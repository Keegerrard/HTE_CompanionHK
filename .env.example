# App environment
APP_ENV=development

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_ORIGIN=http://localhost:3000

# Chat provider routing
CHAT_PROVIDER=mock
FEATURE_LANGGRAPH_ENABLED=true
LANGGRAPH_CHECKPOINTER_BACKEND=memory
FEATURE_MINIMAX_ENABLED=false

# Voice and retrieval feature flags
FEATURE_ELEVENLABS_ENABLED=false
FEATURE_CANTONESEAI_ENABLED=false
FEATURE_EXA_ENABLED=false
FEATURE_AWS_ENABLED=true
FEATURE_WEATHER_ENABLED=true
FEATURE_GOOGLE_MAPS_ENABLED=true

# Memory strategy
MEMORY_LONG_TERM_STRATEGY=hybrid_profile_retrieval
MEMORY_RETRIEVAL_TOP_K=5
MEMORY_SHORT_TERM_TTL_SECONDS=1800
MEMORY_SHORT_TERM_MAX_TURNS=20
MEMORY_EMBEDDING_MODEL=text-embedding-3-small
MEMORY_EMBEDDING_DIMENSIONS=1536
MEMORY_RETRIEVAL_SOURCE=hybrid_profile_retrieval
MEMORY_WRITE_AUDIT_REQUIRED=true

# Local data services
DATABASE_URL=
POSTGRES_USER=companion
POSTGRES_PASSWORD=companion
POSTGRES_DB=companionhk
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT_SECONDS=30
DB_POOL_RECYCLE_SECONDS=1800
DB_CONNECT_TIMEOUT_SECONDS=1
DB_ECHO=false
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Privacy and retention
PRIVACY_STORE_PRECISE_USER_LOCATION=false
RECOMMENDATION_USER_LOCATION_GEOHASH_PRECISION=6

# Provider keys (fill in real values per environment)
MINIMAX_API_KEY=
MINIMAX_MODEL=MiniMax-M2.5
MINIMAX_BASE_URL=https://api.minimax.io/v1
ELEVENLABS_API_KEY=
ELEVENLABS_DEFAULT_VOICE_ID=
CANTONESEAI_API_KEY=
EXA_API_KEY=
GOOGLE_MAPS_API_KEY=
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Weather provider (Open-Meteo)
# Open-Meteo currently requires no API key.
OPEN_METEO_BASE_URL=https://api.open-meteo.com
PROVIDER_TIMEOUT_SECONDS=6

# Google Maps integration defaults
GOOGLE_MAPS_LANGUAGE=en
GOOGLE_MAPS_REGION=hk
GOOGLE_MAPS_DEFAULT_RADIUS_METERS=5000
GOOGLE_MAPS_TRANSPORT_MODE=walking
GOOGLE_MAPS_PHOTO_MAX_WIDTH=800
